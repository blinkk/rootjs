{
  "name": "@blinkk/root-core",
  "version": "1.0.0",
  "description": "",
  "main": "dist/lib.js",
  "module": "dist/lib.mjs",
  "scripts": {
    "compile": "tsup-node src/cli.ts src/lib.ts --dts src/lib.ts --format esm,cjs --no-splitting",
    "dev": "nodemon --watch src -e ts --exec npm run compile",
    "dev:server": "nodemon --watch src -e ts --exec npm run start:dev",
    "start:dev": "npm run compile && node ./dist/cli.js dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blinkk/rootjs.git"
  },
  "author": "",
