    "url": "https://github.com/blinkk/rootjs/issues"
  },
  "homepage": "https://github.com/blinkk/rootjs#readme",
  "files": [
    "dist",
    "package.json"
  ],
  "bin": {
    "root": "dist/cli.js"
  },
  "engines": {
    "node": "16.x.x"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "nodemon": "^2.0.15",
    "tsup": "^5.12.1"
  },
  "dependencies": {
    "@blinkk/root-webui": "workspace:^0.0.0",
    "commander": "^9.0.0",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.27",
    "esbuild-register": "^3.3.2",
    "fastify": "^3.27.4",
    "fastify-plugin": "^3.0.1",
    "fastify-static": "^4.6.1",
