{
  "name": "@blinkk/root",
  "version": "1.0.0-alpha.34",
  "author": "s@blinkk.com",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "bin/*",
    "dist/**/*"
  ],
  "bin": {
    "root": "./bin/root.js"
  },
  "type": "module",
  "module": "./dist/core.js",
  "types": "./dist/core.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsup-node",
    "dev": "nodemon --watch src -e ts,tsx --exec pnpm build",
    "test": "pnpm build && vitest run",
    "test:watch": "pnpm build && vitest"
  },
  "dependencies": {
    "bundle-require": "^3.1.0",
    "commander": "^9.4.0",
    "compression": "^1.7.4",
    "esbuild": "^0.14.27",
    "express": "^4.18.1",
    "fs-extra": "^10.1.0",
    "html-minifier-terser": "^7.0.0",
    "joycon": "^3.1.1",
    "js-beautify": "^1.14.7",
    "kleur": "^4.1.5",
    "sass": "^1.49.9",
    "sirv": "^2.0.2",
    "tiny-glob": "^0.2.9",
    "vite": "^4.0.4"
  },
  "peerDependencies": {
    "preact": "10.x",
    "preact-render-to-string": "5.x"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/html-minifier-terser": "^7.0.0",
    "@types/js-beautify": "^1.13.3",
    "@types/node": "^18.7.14",
    "@types/preact-custom-element": "^4.0.1",
    "nodemon": "^2.0.19",
    "preact": "^10.10.6",
    "preact-custom-element": "^4.2.1",
    "preact-render-to-string": "^5.2.3",
    "rollup": "^2.79.0",
    "tsup": "^6.3.0",
    "typescript": "^4.7.4",
    "vitest": "^0.18.1"
  }
}
