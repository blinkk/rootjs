{
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node16",
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "pretty": true,
    "outDir": "dist",
    "rootDir": "./src",
    "types": ["@blinkk/root/client"],
  },
  "include": ["./src/**/*.scss", "./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules"]
}
