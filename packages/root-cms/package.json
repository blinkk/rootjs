{
  "name": "@blinkk/root-cms",
  "version": "1.0.0-alpha.29",
  "author": "s@blinkk.com",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/*"
  ],
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && concurrently -n \"core,ui\" npm:build:core npm:build:ui",
    "build:core": "tsup-node --config=./core/tsup.config.ts",
    "build:ui": "tsup --config=./ui/tsup.config.ts",
    "dev": "rm -rf dist && concurrently -k -n \"core,ui\" npm:dev:core npm:dev:ui",
    "dev:core": "tsup-node --config=./core/tsup.config.ts --watch",
    "dev:ui": "tsup --config=./ui/tsup.config.ts --watch",
    "test": "pnpm build && vitest run",
    "test:watch": "pnpm build && vitest"
  },
  "dependencies": {
    "@preact/signals": "^1.1.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "firebase": "^9.13.0",
    "jsonwebtoken": "^9.0.0",
    "preact-render-to-string": "^5.2.3"
  },
  "devDependencies": {
    "@blinkk/root": "workspace:*",
    "@types/cookie-parser": "^1.4.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.8",
    "concurrently": "^7.6.0",
    "preact": "*",
    "preact-router": "^4.1.0",
    "tsup": "^6.3.0",
    "typescript": "4.9.4",
    "vite": "*",
    "vitest": "^0.18.1"
  },
  "peerDependencies": {
    "@blinkk/root": "*",
    "preact": "*"
  }
}
