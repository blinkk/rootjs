{
  "name": "@blinkk/root-cms",
  "version": "1.0.0-alpha.29",
  "author": "s@blinkk.com",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/*"
  ],
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && concurrently -n \"core,ui\" npm:build:core npm:build:ui",
    "build:core": "tsup-node --config=./core/tsup.config.ts",
    "//build:ui": "NOTE: esbuild is used for this command because tsup doesn't currently support aliases.",
    "build:ui": "esbuild ui/ui.tsx --bundle --alias:react=@preact/compat --alias:react-dom=@preact/compat --tsconfig=ui/tsconfig.json --outdir=dist",
    "dev": "rm -rf dist && concurrently -k -n \"core,ui\" npm:dev:core npm:dev:ui",
    "dev:core": "pnpm build:core --watch",
    "dev:ui": "pnpm build:ui --watch",
    "test": "pnpm build && vitest run",
    "test:watch": "pnpm build && vitest"
  },
  "dependencies": {
    "@preact/signals": "^1.1.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "firebase": "^9.13.0",
    "jsonwebtoken": "^9.0.0",
    "preact-render-to-string": "^5.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@blinkk/root": "workspace:*",
    "@emotion/react": "^11.10.5",
    "@mantine/core": "^5.10.2",
    "@mantine/hooks": "^5.10.2",
    "@mantine/spotlight": "^5.10.2",
    "@preact/compat": "^17.1.2",
    "@tabler/icons-preact": "^2.1.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.8",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.5",
    "preact": "*",
    "preact-router": "^4.1.0",
    "react": "npm:@preact/compat@^17.1.2",
    "react-dom": "npm:@preact/compat@^17.1.2",
    "tsup": "^6.3.0",
    "typescript": "4.9.4",
    "vite": "*",
    "vitest": "^0.18.1"
  },
  "peerDependencies": {
    "@blinkk/root": "*",
    "preact": "*"
  }
}
