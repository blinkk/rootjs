{
  "name": "@blinkk/root-project",
  "version": "1.0.0",
  "private": true,
  "description": "Root.js is a developer-focused CMS that writes directly to Firestore.",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:webui",
    "dev:server": "CMS_WORKSPACE=../.. npm --prefix=./packages/root-core run dev:server",
    "dev:webui": "npm --prefix=./packages/root-webui run dev",
    "fix": "eslint . --ext .ts,.tsx --fix",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blinkk/rootjs.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blinkk/rootjs/issues"
  },
  "homepage": "https://github.com/blinkk/rootjs#readme",
  "dependencies": {
    "@blinkk/root-core": "workspace:*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "release-please": "^13.8.0",
    "typescript": "^4.6.2"
  }
}
